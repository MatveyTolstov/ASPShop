@{
ViewData["Title"] = "Диаграммы продаж";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .chart-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 15px;
        }
        .chart-header {
            text-align: center;
            margin-bottom: 20px;
        }
        canvas {
            max-width: 100%;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="text-center mt-5">@ViewData["Title"]</h1>
    <p class="text-center text-muted">Анализ продаж за последние периоды</p>

    <div class="row">
        <!-- Столбчатая диаграмма -->
        <div class="col-md-6">
            <div class="chart-container">
                <div class="chart-header">
                    <h4>Общее количество продаж</h4>
                </div>
                <canvas id="barChart"></canvas>
            </div>
        </div>

        <!-- Круговая диаграмма -->
        <div class="col-md-6">
            <div class="chart-container">
                <div class="chart-header">
                    <h4>Распределение продаж по товарам</h4>
                </div>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Столбчатая диаграмма
    fetch('/Graph/BarChart')
        .then(response => response.json())
        .then(data => {
            const ctx = document.getElementById('barChart').getContext('2d');
            const barChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.map(item => item.date), // Даты
                    datasets: [{
                        label: 'Общее количество продаж',
                        data: data.map(item => item.totalSales), 
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: true }
                    },
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        });

    // Круговая диаграмма
    fetch('/Graph/PieChart')
        .then(response => response.json())
        .then(data => {
            const ctx = document.getElementById('pieChart').getContext('2d');
            const pieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: data.map(item => item.product), 
                    datasets: [{
                        data: data.map(item => item.sales), 
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.5)',
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(153, 102, 255, 0.5)',
                            'rgba(255, 159, 64, 0.5)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1,
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: true }
                    }
                }
            });
        });
</script>
</body>
</html>
