@{
    ViewData["Title"] = "#Shop";
}

@model List<ShopHunter.Models.BDConn.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="Css.css">
</head>
<body>
<header class="head">
    <div class="logo">
        <h2>Hunter&Fish</h2>
    </div>
    <nav class="navbar">
        <ul class="nav-list">
            <li>
                <a href="#">Новинки</a>
            </li>
            <li>
                <a href="#">Магазин</a>
            </li>
            <li>
                <a href="#">Контакты</a>
            </li>
            <li>
                <a href="#">О Нас</a>
            </li>
        </ul>
    </nav>
    <div class="shop-icon">
        <img src="data:image/png;base64,"/>
        <img src="data:image/png;base64,"/>

    </div>
</header>
<section>
    <div class="tovarGrid">
        @foreach (var tovar in Model)
        {
            <div class="tovar">
                <img src="https://i.pinimg.com/736x/92/f1/c9/92f1c9f0288b992b061a1c298ec87939.jpg" alt="">
                <h4>@tovar.ProductName</h4>
                <p>@tovar.Price Руб</p>
                <button>
                    Купить
                </button>
            </div>
        }
    </div>
</section>
<footer >
    <div class="footer-content">
        <nav>
            <ul class="footer-nav">
                <li>
                    <a href="#">Политика конфиденциальности</a>
                </li>
                <li>
                    <a href="#">Условия использования</a>
                </li>
                <li>
                    <a href="#">Контакты</a>
                </li>
            </ul>
        </nav>
        <p>© 2024 Hunter&Fish. Все права защищены.</p>
    </div>
</footer>
</body>
</html>