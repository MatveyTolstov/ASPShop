@model List<ShopHunter.Models.BDConn.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Css.css">
</head>
<body>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Список товаров</h2>
        <div>
            <a class="btn btn-primary me-2" asp-controller="Graph" asp-action="Graphs">Графики</a>
            <a class="btn btn-success" asp-controller="Home" asp-action="CreateProduct">Добавить товар</a>
        </div>
    </div>

    <div class="table-responsive shadow">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Название товара</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>ID картинки</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @if (Model == null || !Model.Any())
            {
            <tr>
                <td colspan="7" class="text-center">Товары отсутствуют.</td>
            </tr>
            }
            else
            {
            @foreach (var product in Model)
            {
            <tr>
                <td>@product.ID_Product</td>
                <td>@product.ProductName</td>
                <td>@product.Quantity</td>
                <td>@product.Price</td>
                <td>@product.Picture_ID</td>
                <td>@product.CategoryProduct_ID</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = product.ID_Product })">Редактировать</a>
                    <a class="btn btn-sm btn-danger" onclick="return confirm('Вы точно хотите удалить этот товар?')" href="@Url.Action("Delete", new { id = product.ID_Product })">Удалить</a>
                </td>
            </tr>
            }
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
